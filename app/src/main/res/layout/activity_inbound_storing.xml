<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/inboundRackPopup"
    tools:context=".Inbound.Inbound_Storing_Activity">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view_rack"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:autoFocusButtonColor="@color/white"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@android:color/white"
        app:flashButtonVisible="true"
        app:maskColor="#43000000" />

    <TextView
        android:id="@+id/tv_textViewRack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanner_view_rack"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/scanRackCode"
        android:textSize="30dp" />

    <Button
        android:id="@+id/buttonProceedInfoRack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_textViewRack"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="0dp"
        android:text="@string/proceed"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/imageButtonRackPopup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/scanner_view_rack"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/ic_baseline_grid_on_24" />

</RelativeLayout>